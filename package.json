{
  "name": "qiao-electron",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "lerna run build --ignore=qiao-electron-demo",
    "prettier": "qpro prettier",
    "eslint": "qpro eslint",
    "test": "lerna run test",
    "lint": "npm run build && npm run test && npm run prettier && npm run eslint",
    "postinstall": "npm run lint",
    "pb": "lerna publish",
    "graph": "nx graph",
    "check": "ncu && lerna exec ncu --concurrency=1",
    "update": "ncu -u && lerna exec 'ncu -u' --concurrency=1",
    "pkg": "qlerna pkg ./packages",
    "dpkg": "qlerna pkg ./packages dev"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "ava": "^5.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.3",
    "lerna": "^7.2.0",
    "lint-staged": "^14.0.1",
    "nx": "^16.8.1",
    "qiao-lerna": "^3.5.5",
    "qiao-project": "^3.5.6",
    "rollup": "^3.29.0"
  }
}
