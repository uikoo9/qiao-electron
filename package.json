{
  "name": "root",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "check": "qlerna ncu ./packages",
    "ncu": "lerna exec 'ncu -u'",
    "clean": "lerna clean -y && lerna exec 'rm -rf package-lock.json'",
    "init": "lerna bootstrap --hoist",
    "build": "lerna run build --ignore=qiao-electron-demo",
    "prettier": "prettier --write .",
    "eslintfix": "eslint . --ext .js --fix",
    "lint": "npm run prettier && npm run eslintfix",
    "test": "lerna run test",
    "postinstall": "npm run clean && npm run init && npm run build && npm run lint && npm run test",
    "dc": "qlerna dc ./packages",
    "ls": "lerna ls -l",
    "pkg": "qlerna pkg ./packages",
    "dpkg": "qlerna pkg ./packages 1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.3",
    "qiao-lerna": "^1.3.4",
    "rollup": "^3.14.0"
  }
}
