{
  "name": "root",
  "private": true,
  "scripts": {
    "check": "qlerna ncu ./packages",
    "ncu": "lerna exec 'ncu -u'",
    "clean": "lerna clean -y",
    "init": "lerna bootstrap --hoist",
    "build": "lerna run build --scope=qiao-electron",
    "prettier": "prettier --write .",
    "eslintfix": "eslint . --ext .js --fix",
    "postinstall": "npm run clean && npm run init && npm run build && npm run prettier && npm run eslintfix",
    "dc": "qlerna dc ./packages",
    "ls": "lerna ls -l",
    "pkg": "qlerna pkg ./packages",
    "dpkg": "qlerna pkg ./packages 1"
  },
  "devDependencies": {
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "prettier": "^2.8.1",
    "qiao-lerna": "^1.2.7",
    "rollup": "^3.9.1"
  }
}
